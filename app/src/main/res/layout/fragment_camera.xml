<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <frameLayout
        android:id="@+id/fragment_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="270dp"
            android:id="@+id/front_camera">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/icn_front"
                android:src="@drawable/front1"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/text_front"
                android:text="正面照采集"
                android:textSize="24dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:id="@+id/side_camera">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/icn_side"
                android:src="@drawable/side"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/text_side"
                android:text="侧面照采集"
                android:textSize="24dp"
                android:gravity="center"/>
        </LinearLayout>
    </frameLayout>
</io.codetail.widget.RevealFrameLayout>